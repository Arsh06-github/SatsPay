    "build": "craco build",
    "test": "craco test",
    "eject": "react-scripts eject",
    "supabase:setup": "node scripts/setup-supabase.js",
    "supabase:start": "docker-compose up -d",
    "supabase:stop": "docker-compose down",
    "supabase:logs": "docker-compose logs -f",
    "nigiri:setup": "node scripts/setup-nigiri.js",
