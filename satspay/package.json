    "build:production": "NODE_ENV=production npm run build",
    "performance:test": "node scripts/performance-test.js",
    "performance:lighthouse": "lighthouse http://localhost:3000 --output=html --output-path=./performance-results/lighthouse-report.html",
    "optimize:images": "imagemin src/assets/images/* --out-dir=src/assets/images/optimized",
    "bundle:analyze": "npx webpack-bundle-analyzer build/static/js/*.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
